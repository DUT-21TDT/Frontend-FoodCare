            <div class="UploadImg">
                <div class="UploadImgHeader">
                    <h2 class="UploadImg__title">Cập nhật ảnh đại diện</h2>
                    <a href=""><i class="fa-solid fa-xmark UploadImg__xmark"></i></a>
                </div>
                <div class = "uploadImgBody">
                    <input type="file" name="image">
                    <button type="submit" class = "btnUploadImg">Cập nhật</button>
                </div>
            </div>
        </form>

      



