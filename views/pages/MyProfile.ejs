<script>
    $(document).ready(function()
    {
        $(".iconAddAvatar").click(function(event){
            event.preventDefault();
            $(".UploadImg").fadeIn();
            $(".MyProfile").css("opacity","0.5");
            $(".container2").css("opacity","0.5");
        })
    })
</script>
