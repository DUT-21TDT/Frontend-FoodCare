<link rel="stylesheet" href="../assets/css/FID_New_V2.css">
<div class="container">
  <div class="row align-items-start">
    <div class="col">
      <div class="FID_header">
        <h1 class="FID_header__title">
          <%= data.foodname %>
        </h1>
      </div>
    </div>

  </div>
  <div class="row align-items-center" style="margin: 42px 0;">
    <div class="col">
      <h3 class="FID_body__left--title">Nutritions</h3>
      <div class="FID_body__left-nutriinfor">
        <div class="FID_body__left-nutriinfor--item">
          <div class="nutriinfor--item__circle">Energy</div>
          <span class="nutriinfor--item__text">
            <%= data.energy %> Calo
          </span>
        </div>
        <div class="FID_body__left-nutriinfor--item">
          <div class="nutriinfor--item__circle">Carbs</div>
          <span class="nutriinfor--item__text">
            <%= data.carbohydrate %> gram
          </span>
        </div>
        <div class="FID_body__left-nutriinfor--item">
          <div class="nutriinfor--item__circle">Lipid</div>
          <span class="nutriinfor--item__text">
            <%= data.lipid %> gram
          </span>
        </div>
        <div class="FID_body__left-nutriinfor--item">
          <div class="nutriinfor--item__circle">Protein</div>
          <span class="nutriinfor--item__text">
            <%= data.protein %> gram
          </span>
        </div>
        <div class="FID_body__left-nutriinfor--item">
          <div class="nutriinfor--item__circle">Vitamins</div>
          <span class="nutriinfor--item__text">
            <%= data.vitamins %>
          </span>
        </div>
        <div class="FID_body__left-nutriinfor--item">
          <div class="nutriinfor--item__circle">Minerals</div>
          <span class="nutriinfor--item__text">
            <%= data.minerals %>
          </span>
        </div>
        <!-- <div class="FID_body__left-nutriinfor--item">
                <div class="nutriinfor--item__circle">370</div>
                <span class = "nutriinfor--item__text">Protein</span>
                </div> -->
      </div>
    </div>
    <div class="col">
      <div class="FID_body__right">
        <% if (data.foodimage && (data.foodimage.includes("https") || /\.(jpg|jpeg|png)$/.test(data.foodimage))) { %>
          <img src="<%= data.foodimage %>" class="">
          <% } else { %>
            <img src="../assets/images/errorImg.jpg" class="">
            <% } %>
      </div>
    </div>

  </div>


</div>
</div>